<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>neu.cs.doc.cs4530</groupId>
  <artifactId>real-estate-microservices</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <id>api-gateway</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>api-gateway</finalName>
              <transformers>
                <transformer>
                  <mainClass>app.ApiGateway</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>property-service</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>property-service</finalName>
              <transformers>
                <transformer>
                  <mainClass>app.PropertyService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>analytics-service</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>analytics-service</finalName>
              <transformers>
                <transformer>
                  <mainClass>app.AnalyticsService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>io.javalin.community.openapi</groupId>
      <artifactId>openapi-annotation-processor</artifactId>
      <version>6.6.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>21</maven.compiler.target>
    <slf4j.version>2.0.16</slf4j.version>
    <maven.compiler.source>21</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <mongodb.version>4.11.1</mongodb.version>
    <jackson.version>2.16.1</jackson.version>
    <javalin.version>6.6.0</javalin.version>
  </properties>
</project>
